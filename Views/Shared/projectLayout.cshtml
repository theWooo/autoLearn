@using diplom.Controllers
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - diplom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/diplom.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="topBars">
                <div class="courses">
                    <a asp-controller="Course" asp-action="Index">Available courses</a>
                </div>
                <div class="courses">
                    <a asp-controller="Course" asp-action="CourseWorkshop">Course workshop</a>
                </div>
                <div id="accountLogIn">
                    @{
                        if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Auth" asp-action="Authorization">Log in</a>
                        }
                        else {
                            <label>@User.Claims.First(it => it.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name").Value </label>
                            <a asp-controller="Auth" asp-action="DeAuthorization">Log out</a>
                        }
                    }
                </div>
            </div>
        </header>
        @RenderBody()  
    </div>
</body>
</html>